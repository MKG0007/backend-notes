<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>EJS</title>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex flex-col items-center pt-16">

  <!-- Header -->
  <h1 class="text-3xl font-bold text-emerald-400 mb-8">Hello | EJS</h1>

  <!-- Form Section -->
  <div class="main w-full max-w-lg bg-zinc-800 p-8 rounded-2xl shadow-lg">
    <div class="form">
      <form action="/create" method="post" class="space-y-5">

        <input 
          type="text" 
          name="title"
          placeholder="Title here..." 
          class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 
                 focus:outline-none focus:ring-2 focus:ring-emerald-400"
          required
        >

        <textarea 
          name="detail"
          placeholder="Write your notes here..." 
          class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 
                 focus:outline-none focus:ring-2 focus:ring-emerald-400 resize-none"
          rows="5"
          required
        ></textarea>

        <input 
          type="submit" 
          value="Create Task"
          class="w-full py-2 rounded-lg bg-emerald-500 hover:bg-emerald-600 
                 transition duration-200 font-semibold cursor-pointer"
        >

      </form>
    </div>
  </div>

  <!-- Task List Section -->
  <!-- Task List Section -->
<div class="tasks w-full max-w-lg mt-6 bg-zinc-800 p-6 rounded-2xl shadow-lg">
  <h2 class="text-xl font-semibold mb-4 text-emerald-400">Your Tasks</h2>
  
  <!-- Scrollable task list -->
  <ul class="space-y-3 max-h-64 overflow-y-auto pr-2">
    <% if (files.length > 0) { %>
      <% files.forEach(function(val) { %>
        <li class="p-3 bg-zinc-700 rounded-lg hover:bg-zinc-600 transition">
          ðŸ“Œ <a href="/files/<%= val %>" class="text-emerald-300 hover:underline">
            <%= val %>
          </a><br>
          <a href="/edit/<%= val %>" class="text-blue-400">edit file</a>
        </li>
      <% }) %>
    <% } else { %>
      <li class="p-3 bg-zinc-700 rounded-lg text-zinc-400">
        ðŸ“Œ No tasks are added yet!
      </li>
    <% } %>
  </ul>
</div>


</body>
</html>
