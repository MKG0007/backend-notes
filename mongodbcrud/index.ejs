<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Create User</title>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex items-center justify-center px-4">

  <div class="w-full max-w-md bg-zinc-800 p-8 rounded-2xl shadow-lg border border-zinc-700">
    <h1 class="text-2xl font-bold text-emerald-400 mb-6 text-center">ðŸ‘¤ Create User</h1>

    <form action="/create" method="post" class="space-y-5">
      <!-- Name -->
      <div>
        <label for="name" class="block text-sm mb-2 text-zinc-300">Full Name</label>
        <input 
          type="text" 
          id="name"
          name="name"
          placeholder="Enter your name" 
          class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 
                 focus:outline-none focus:ring-2 focus:ring-emerald-400 text-white"
          required
        >
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm mb-2 text-zinc-300">Email</label>
        <input 
          type="email" 
          id="email"
          name="email"
          placeholder="Enter your email" 
          class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 
                 focus:outline-none focus:ring-2 focus:ring-emerald-400 text-white"
          required
        >
      </div>

      <!-- Image URL -->
      <div>
        <label for="url" class="block text-sm mb-2 text-zinc-300">Profile Image URL</label>
        <input 
          type="url" 
          id="url"
          name="url"
          placeholder="Enter image URL" 
          class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 
                 focus:outline-none focus:ring-2 focus:ring-emerald-400 text-white"
        >
      </div>

      <!-- Submit Button -->
      <button 
        type="submit" 
        class="w-full py-2 rounded-lg bg-emerald-500 hover:bg-emerald-600 
               transition duration-200 font-semibold cursor-pointer"
      >
        Create User
      </button>
    </form>
    <br>
      <a
        class="w-full p-2 rounded-lg bg-emerald-500 hover:bg-emerald-600 
               transition duration-200 font-semibold cursor-pointer"

        href="/read"
      >
        See All Users
</a>
  </div>

</body>
</html>
