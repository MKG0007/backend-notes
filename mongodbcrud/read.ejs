<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen px-6 py-10">

  <div class="max-w-5xl mx-auto">
    <!-- Title -->
    <h1 class="text-3xl font-bold text-emerald-400 mb-8 text-center">üë• All Users</h1>
          <a
        class="w-full p-2 rounded-lg bg-emerald-500 hover:bg-emerald-600 
               transition duration-200 font-semibold cursor-pointer"

        href="/"
      >
        Back to home
</a><br><br>

    <!-- User Cards Grid -->
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
      
      <!-- User Card -->
       <% users.forEach(function(user){ %>
      <div class="bg-zinc-800 p-6 rounded-2xl shadow-md border border-zinc-700">
        <div class="flex flex-col items-center">
          <!-- Profile Image -->
          <img src="<%=user.image %>" 
               alt="User profile" 
               class="w-50 h-50  border-2 border-emerald-400 object-cover mb-4 object-top ">

          <!-- Name & Email -->
          <h3 class="text-lg font-semibold"><%=user.name %></h3>
          <h5 class="text-sm text-zinc-400 mb-4"><%=user.email %></h5>

          <!-- Action Buttons -->
          <div class="flex gap-3">
            <a href="/edit/<%= user._id %>" 
               class="px-4 py-2 rounded-lg bg-emerald-500 hover:bg-emerald-600 text-sm font-medium transition">
               ‚úèÔ∏è Edit
            </a>
            <a href="/delete/<%= user._id %>" 
               class="px-4 py-2 rounded-lg bg-red-500 hover:bg-red-600 text-sm font-medium transition">
               üóë Delete
            </a>
          </div>
        </div>
      </div>

       <% }) %>
      <!-- Duplicate more user cards dynamically using a loop in your template engine (EJS, Handlebars, etc.) -->

    </div>
  </div>

</body>
</html>
